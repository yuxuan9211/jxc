<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    android:orientation="vertical"
    >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_title"
        android:orientation="horizontal"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="丰庆路烟酒专卖店"
            android:textColor="#fff"
            android:textSize="20sp"
			android:layout_gravity="center"
			android:paddingLeft="60dp"
			android:ellipsize="end"
			android:id="@+id/shanghu_title"
            />
        <LinearLayout  
        	android:layout_width="fill_parent"  
        	android:layout_height="fill_parent" 
        	android:gravity="right" >  
           <ImageView
	        android:id="@+id/back"
	        android:layout_width="100dp"
	        android:layout_height="30dp"
	        android:layout_marginTop="15dp"
	        android:contentDescription="@string/back"
	        android:src="@drawable/back" />
         </LinearLayout> 
      </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:background="@drawable/personal_info_bg"
        android:gravity="left"
        android:layout_margin="20dp"
        >

        <!-- 地址 -->
        <LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:layout_marginLeft="20dp"
        	android:layout_marginTop="20dp"
        	>
            <TextView 
                android:layout_width="80dp"
	        	android:layout_height="wrap_content"
	        	android:text="@string/address"
	        	android:textColor="#000000"
                android:gravity="right"
                />
            <TextView 
                android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:text="丰庆公园对面"
	        	android:textColor="#000000"
                android:gravity="left"
                android:id="@+id/shanghu_add_text"
                />            
        </LinearLayout>
        <!-- 电话 -->
        <LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:layout_marginLeft="20dp"
        	android:layout_marginTop="20dp"
        	>
            <TextView 
                android:layout_width="80dp"
	        	android:layout_height="wrap_content"
	        	android:text="@string/phone"
	        	android:textColor="#000000"
                android:gravity="right"
                />
            <TextView 
                android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:text="029-88888888"
	        	android:textColor="#000000"
                android:gravity="left"
                android:id="@+id/shanghu_tel_text"
                />            
        </LinearLayout>
        
		<!-- 传真 -->
        <LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:layout_marginLeft="20dp"
        	android:layout_marginTop="20dp"
        	>
            <TextView 
                android:layout_width="80dp"
	        	android:layout_height="wrap_content"
	        	android:text="@string/fax"
	        	android:textColor="#000000"
                android:gravity="right"
                />
            <TextView 
                android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:text="029-88888888"
	        	android:textColor="#000000"
                android:gravity="left"
                android:id="@+id/shanghu_fax_text"
                />            
        </LinearLayout>  
        
        <!-- 联系人 -->
        <LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:layout_marginLeft="20dp"
        	android:layout_marginTop="20dp"
        	>
            <TextView 
                android:layout_width="80dp"
	        	android:layout_height="wrap_content"
	        	android:text="@string/contact"
	        	android:textColor="#000000"
                android:gravity="right"
                />
            <TextView 
                android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:text="张三"
	        	android:textColor="#000000"
                android:gravity="left"
                android:id="@+id/shanghu_lxr_text"
                />            
        </LinearLayout>
        
        <!-- 手机 -->
        <LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:layout_marginLeft="20dp"
        	android:layout_marginTop="20dp"
        	>
            <TextView 
                android:layout_width="80dp"
	        	android:layout_height="wrap_content"
	        	android:text="@string/phonenum"
	        	android:textColor="#000000"
                android:gravity="right"
                />
            <TextView 
                android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:text="15353659649"
	        	android:textColor="#000000"
                android:gravity="left"
                android:id="@+id/shanghu_mp_text"
                />            
        </LinearLayout>
      
    </LinearLayout>
    
</LinearLayout>